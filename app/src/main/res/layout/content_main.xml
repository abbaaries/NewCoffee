<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical"
    tools:context="com.topic.newcoffee.MainActivity">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_gravity="center_horizontal"
        android:layout_weight="2"
        app:srcCompat="@drawable/coffee5" />

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_weight="2">

        <ImageButton
            android:id="@+id/imgBtnSend1"
            android:layout_width="160dp"
            android:layout_height="165dp"
            android:layout_gravity="center"

            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:onClick="sendOut"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/send_out1" />

        <ImageButton
            android:id="@+id/imgBtnTake1"
            android:layout_width="160dp"
            android:layout_height="165dp"
            android:layout_gravity="center"

            android:layout_marginRight="16dp"
            android:layout_marginTop="16dp"
            android:onClick="takeMeal"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/take_meal1" />
    </android.support.constraint.ConstraintLayout>


</LinearLayout>