<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/text_name2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        android:gravity="center_vertical"
        android:minHeight="?android:attr/listPreferredItemHeightSmall"
        android:paddingLeft="?android:attr/listPreferredItemPaddingLeft"
        android:paddingRight="?android:attr/listPreferredItemPaddingRight"
        android:textAppearance="?android:attr/textAppearanceListItemSmall"
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_type2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:text="熱"
        android:textSize="14sp"
        app:layout_constraintLeft_toRightOf="@+id/text_name2"
        app:layout_constraintBaseline_toBaselineOf="@+id/text_name2" />

    <TextView
        android:id="@+id/text_size2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:text="中杯"
        android:textSize="14sp"
        app:layout_constraintLeft_toRightOf="@+id/text_type2"
        app:layout_constraintBaseline_toBaselineOf="@+id/text_name2" />

    <TextView
        android:id="@+id/text_sugar2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:text="正常"
        android:textSize="14sp"
        app:layout_constraintLeft_toRightOf="@+id/text_size2"
        app:layout_constraintBaseline_toBaselineOf="@+id/text_name2" />

    <TextView
        android:id="@+id/text_amount2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:text="數量"
        android:textSize="14sp"
        app:layout_constraintLeft_toRightOf="@+id/text_sugar2"
        app:layout_constraintBaseline_toBaselineOf="@+id/text_name2" />

    <TextView
        android:id="@+id/text_sum2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="總價"
        android:textSize="18sp"
        app:layout_constraintLeft_toRightOf="@+id/textView21"
        android:layout_marginLeft="0dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/text_name2" />

    <TextView
        android:id="@+id/textView21"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="共"
        android:textSize="14sp"
        app:layout_constraintLeft_toRightOf="@+id/textView23"
        android:layout_marginLeft="8dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/text_name2" />

    <TextView
        android:id="@+id/textView22"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="元"
        android:textSize="14sp"
        app:layout_constraintLeft_toRightOf="@+id/text_sum2"
        android:layout_marginLeft="0dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/text_name2" />

    <TextView
        android:id="@+id/textView23"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:text="杯"
        android:textSize="14sp"
        app:layout_constraintLeft_toRightOf="@+id/text_amount2"
        app:layout_constraintBaseline_toBaselineOf="@+id/text_name2" />

</android.support.constraint.ConstraintLayout>