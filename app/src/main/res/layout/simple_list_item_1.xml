<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/text_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="8dp"
        android:gravity="center_vertical"
        android:minHeight="?android:attr/listPreferredItemHeightSmall"
        android:paddingLeft="?android:attr/listPreferredItemPaddingLeft"
        android:paddingRight="?android:attr/listPreferredItemPaddingRight"
        android:text="1"
        android:textAppearance="?android:attr/textAppearanceListItemSmall"
        android:textSize="24sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="熱"
        android:textSize="18sp"
        app:layout_constraintLeft_toRightOf="@+id/text_name"
        android:layout_marginLeft="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/text_name"
        android:layout_marginBottom="-1dp" />

    <TextView
        android:id="@+id/text_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="中杯"
        android:textSize="18sp"
        app:layout_constraintLeft_toRightOf="@+id/text_type"
        android:layout_marginLeft="4dp"
        app:layout_constraintBottom_toBottomOf="@+id/text_name"
        android:layout_marginBottom="-1dp" />

    <TextView
        android:id="@+id/text_sugar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="正常"
        android:textSize="18sp"
        app:layout_constraintLeft_toRightOf="@+id/text_size"
        android:layout_marginLeft="4dp"
        app:layout_constraintBottom_toBottomOf="@+id/text_name"
        android:layout_marginBottom="-1dp" />

    <TextView
        android:id="@+id/text_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="數量"
        android:textSize="18sp"
        app:layout_constraintLeft_toRightOf="@+id/text_sugar"
        android:layout_marginLeft="4dp"
        app:layout_constraintBottom_toBottomOf="@+id/text_name"
        android:layout_marginBottom="-1dp" />

    <TextView
        android:id="@+id/text_sum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="總價"
        android:textSize="24sp"
        app:layout_constraintRight_toLeftOf="@+id/textView25"
        android:layout_marginRight="-2dp"
        app:layout_constraintBottom_toBottomOf="@+id/textView25"
        android:layout_marginBottom="1dp" />

    <TextView
        android:id="@+id/textView24"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="共"
        android:textSize="18sp"
        app:layout_constraintRight_toLeftOf="@+id/text_sum"
        android:layout_marginRight="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/text_sum"
        android:layout_marginBottom="0dp" />

    <TextView
        android:id="@+id/textView25"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="0dp"
        android:text="元"
        android:textSize="18sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/text_name"
        android:layout_marginBottom="-1dp" />

    <TextView
        android:id="@+id/textView26"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="杯"
        android:textSize="18sp"
        app:layout_constraintLeft_toRightOf="@+id/text_amount"
        android:layout_marginLeft="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/text_name"
        android:layout_marginBottom="0dp" />

</android.support.constraint.ConstraintLayout>